<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shopbg1"
    tools:context=".ShopActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/applyPlaneView"
            android:layout_width="137dp"
            android:layout_height="112dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="138dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="135dp"
            android:layout_weight="1"
            android:background="@drawable/plane" />

        <ImageButton
            android:id="@+id/shopBackbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="48dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="90dp"
            app:srcCompat="@drawable/coin" />

        <TextView
            android:id="@+id/shopCoinNum"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="17dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/shopbg">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/shopbg"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="267dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$300"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="96dp"
            tools:layout_editor_absoluteY="597dp" />

        <Button
            android:id="@+id/shopPlanebtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="423dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$420"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="271dp"
            tools:layout_editor_absoluteY="597dp" />

        <ImageButton
            android:id="@+id/shopPlane2"
            android:layout_width="120dp"
            android:layout_height="109dp"
            android:background="@drawable/shopplanbg"
            android:scaleType="fitXY"
            android:src="@drawable/plane2"
            tools:layout_editor_absoluteX="228dp"
            tools:layout_editor_absoluteY="288dp" />

        <Button
            android:id="@+id/shopPlanebtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="241dp"
            tools:layout_editor_absoluteY="618dp" />

        <Button
            android:id="@+id/shopPlanebtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="245dp"
            tools:layout_editor_absoluteY="424dp" />

        <ImageButton
            android:id="@+id/shopPlane1"
            android:layout_width="120dp"
            android:layout_height="109dp"
            android:background="@drawable/shopplanbg"
            android:scaleType="fitXY"
            android:src="@drawable/plane"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="288dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="281dp"
            tools:layout_editor_absoluteY="402dp" />

        <TextView
            android:id="@+id/passView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="402dp" />

        <ImageButton
            android:id="@+id/shopPlane3"
            android:layout_width="120dp"
            android:layout_height="109dp"
            android:background="@drawable/shopplanbg"
            android:scaleType="fitXY"
            android:src="@drawable/plane3"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="480dp" />

        <ImageButton
            android:id="@+id/shopPlane4"
            android:layout_width="120dp"
            android:layout_height="109dp"
            android:background="@drawable/shopplanbg"
            android:scaleType="fitXY"
            android:src="@drawable/plane4"
            tools:layout_editor_absoluteX="228dp"
            tools:layout_editor_absoluteY="480dp" />

        <Button
            android:id="@+id/shopPlanebtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="618dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>